{
  "name": "bun-buddy",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "server": "cd backend && bun start",
    "client": "cd frontend && bun dev",
    "main-dependencies": "bun install",
    "server-dependencies": "cd ./backend && bun install",
    "client-dependencies": "cd ./frontend && bun install",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "setup": "bun run main-dependencies && bun run server-dependencies && bun run client-dependencies"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.1"
  }
}
